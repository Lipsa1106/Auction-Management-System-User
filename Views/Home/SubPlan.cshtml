@{
    ViewData["Title"] = "SubPlan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row g-10 my-5">
        @foreach (System.Data.DataRow dr in ViewBag.subdata.Rows)

        {
            @if (@dr["status"].ToString() == "true")
            {
                <div class="col-xl-4 ">
                    <form method="post">
                        <div class="h-100 px-4 py-3 bg-light-primary">
                            <div class="w-100 d-flex flex-column flex-center rounded-3 bg-light bg-opacity-75 py-15 px-10">
                                <div class="mb-7 text-center border-bottom mb-4">
                                    <h1 class="fw-bold fs-2" style="color:#232F3E">@dr["sub_title"].ToString()</h1>
                                    <div class="text-gray-600 fw-semibold ">
                                        @dr["pkg_desc"].ToString()
                                    </div>
                                    <div class="text-center my-2">
                                        <span class="mb-2" style="color:#232F3E">$</span>

                                        <span class="fw-bold" style="font-size:26px;color:#232F3E">
                                            @dr["price"].ToString()
                                        </span>

                                        <span class="fs-7 text-gray-800 fw-semibold">
                                            /
                                            <span>@dr["p_date"].ToString()</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="w-100 mb-10">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-800 flex-grow-1 pe-3">
                                            Up to @dr["num_product"].ToString() Active Products
                                        </span>
                                        <i class="ki-duotone ki-check-circle fs-1 text-success"><span class="path1"></span><span class="path2"></span></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-800 flex-grow-1 pe-3">
                                            Up to @dr["num_bid"].ToString() Project Integrations
                                        </span>
                                        <i class="ki-duotone ki-check-circle fs-1 text-success"><span class="path1"></span><span class="path2"></span></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-800 flex-grow-1 pe-3">
                                            Analytics Module
                                        </span>
                                        <i class="ki-duotone ki-check-circle fs-1 text-success"><span class="path1"></span><span class="path2"></span></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-600 flex-grow-1">
                                            Finance Module
                                        </span>
                                        <i class="ki-duotone ki-cross-circle fs-1"><span class="path1"></span><span class="path2"></span></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-600 flex-grow-1">
                                            Accounting Module
                                        </span>
                                        <i class="ki-duotone ki-cross-circle fs-1"><span class="path1"></span><span class="path2"></span></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-600 flex-grow-1">
                                            Network Platform
                                        </span>
                                        <i class="ki-duotone ki-cross-circle fs-1"><span class="path1"></span><span class="path2"></span></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="fw-semibold fs-6 text-gray-600 flex-grow-1">
                                            Unlimited Cloud Space
                                        </span>
                                        <i class="ki-duotone ki-cross-circle fs-1"><span class="path1"></span><span class="path2"></span></i>
                                    </div>

                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                
                                <input type="submit" class="btn btn-sm btn-primary-main px-6 py-2 " value="BUY NOW">
                            </div>
                        </div>
                    </form>
                </div>
            }
        }
    </div>
</div>