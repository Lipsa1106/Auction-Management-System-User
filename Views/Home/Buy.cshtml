@{
    ViewData["Title"] = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="intro-section" style="background-image: url('/img/homepage/background.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-7 mx-auto text-center aos-init aos-animate" data-aos="fade-up">
                <h1>Buy, Sell, Bid</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sit, nihil.</p>
            </div>
        </div>
    </div>
</div>
<div class="site-section">
    <div class="container mx-auto">
        <div class="row auctions-entry align-items-center ">
            @foreach (System.Data.DataRow dr in ViewBag.data.Rows)

            {
                <div class="col-12 col-md-6  col-lg-6 col-xl-3 col-xxl-3 mt-4 ">
                    <div class="item shadow-lg p-3" style="margin-bottom:0;box-shadow:none">
                        <div class="border-bottom">
                            <strong class="price">$@dr["price"].ToString()</strong>
                            <img src="~/img/homepage/asset_1.jpeg" alt="Image" class="img-fluid mb-0" />
                        </div>
                        <div class="">
                            <h3><a asp-controller="Home" asp-action="Bid">@dr["product_name"].ToString()</a></h3>
                            <div class="d-flex mb-2 justify-content-between text-color">
                                <span>@dr["description"].ToString()</span>
                                <span>@dr["condition"].ToString()</span>
                            </div>
                            <div class="d-flex mb-2 justify-content-between text-color">
                                <span class="ml-auto">Starting Bid : @dr["starting_bid"].ToString()$</span>
                            </div>
                            <div class="btn btn-bid">
                                @Html.ActionLink("Submit a Bid","Bid", new {Id = dr["id"].ToString()})
                            </div>
                        </div>
                    </div>
                </div>

            }
            
        </div>
    </div>
    <div class="site-section pt-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 mb-5">
                    <span class="caption">How?</span>
                    <h2 class="text-black">How <strong>It Works</strong></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="step">
                        <span class="wrap-icon icon-user">
                            <i class="fa-solid fa-user"></i>
                        </span>
                        <h3>Register</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed consequatur quaerat magnam sequi nobis ut et iure.</p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="step">
                        <span class="wrap-icon icon-money">
                            <i class="fa-solid fa-money-bill"></i>
                        </span>
                        <h3>Buy or Bid</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed consequatur quaerat magnam sequi nobis ut et iure.</p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="step">
                        <span class="wrap-icon icon-glass">
                            <i class="fa-solid fa-martini-glass"></i>
                        </span>
                        <h3>Submit a bid</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed consequatur quaerat magnam sequi nobis ut et iure.</p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="step last">
                        <span class="wrap-icon icon-trophy">
                            <i class="fa-solid fa-trophy"></i>
                        </span>
                        <h3>Win</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed consequatur quaerat magnam sequi nobis ut et iure.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-7">
                    <h2 class="text-black mb-4 font-bold">Create an account and start Buy, Bid or Sell Now!</h2>
                    <a class="btn btn-primary-main w-auto" asp-controller="Home" asp-action="Register">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>